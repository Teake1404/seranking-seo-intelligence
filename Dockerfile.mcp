# Multi-stage Dockerfile for Enhanced SEO API with MCP
FROM node:18-alpine AS mcp-builder

# Install MCP server dependencies
WORKDIR /app
RUN git clone https://github.com/seo-data-api/seo-data-api-mcp-server.git
WORKDIR /app/seo-data-api-mcp-server
RUN npm install && npm run build

# Python API stage
FROM python:3.9-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy MCP server from builder stage
COPY --from=mcp-builder /app/seo-data-api-mcp-server ./seo-data-api-mcp-server

# Copy application code
COPY enhanced_api_seranking.py .
COPY enhanced_claude_insights.py .
COPY seo_opportunity_analysis.py .
COPY seranking_mcp.py .
COPY claude_insights.py .
COPY redis_cache.py .
COPY config.py .

# Create startup script
COPY start_with_mcp.sh .
RUN chmod +x start_with_mcp.sh

# Expose ports
EXPOSE 8080
EXPOSE 3000

# Start both MCP server and API
CMD ["./start_with_mcp.sh"]
