# Dockerfile for SEranking MCP Server
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies
RUN apk add --no-cache git

# Clone SEranking MCP server
RUN git clone https://github.com/seo-data-api/seo-data-api-mcp-server.git .

# Install dependencies
RUN npm install

# Build the project
RUN npm run build

# Expose port
EXPOSE 3000

# Start the MCP server
CMD ["node", "dist/index.js"]
